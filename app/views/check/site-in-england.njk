{% extends '_layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set pageHeading = "Is the biodiversity gain site in England?" %}

{% block content %}
    <div class="govuk-body">
      {% if err %}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="POST" action="/land/site-in-england" novalidate>
            <input type="hidden" name="crumb" value="{{crumb}}"/>
            {{ govukRadios({
                idPrefix: "inEngland",
                name: "inEngland",
                errorMessage: err[0],
                fieldset: {
                  legend: {
                    text: pageHeading,
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--l"
                  }
                },
                hint: {
                  text: "The boundary of the biodiversity gain site cannot be in Scotland or Wales."
                },
                items: [
                  {
                    value: "yes",
                    text: "Yes",
                    checked: checked(inEngland, "yes")
                  },
                  {
                    value: "no",
                    text: "No",
                    checked: checked(inEngland, "no")
                  },
                  {
                    value: "not sure",
                    text: "I'm not sure",
                    checked: checked(inEngland, "not sure")
                  }
                ]
              }) 
            }}

            {{ govukButton({
                text: "Continue",
                attributes: {
                  "data-testid": "continue"
                }
              }) 
            }}
          </form>
        </div>
      </div>
    </div>
{% endblock %}